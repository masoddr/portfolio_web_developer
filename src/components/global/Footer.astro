---
import { getLangFromUrl, useTranslatedPath, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<footer class="footer">
	<div class="container">
		<div class="footer-content">
			<div class="footer-section">
				<h3>Parallax Studio</h3>
				<p>Agence web spécialisée dans la création de sites web et d'applications. Basée à Toulouse, nous créons des expériences digitales uniques.</p>
			</div>
			<div class="footer-section">
				<h3>Navigation</h3>
				<ul>
					<li><a href={translatePath("/")}>{t("homepage")}</a></li>
					<li><a href={translatePath("/contact/")}>{t("contact")}</a></li>
				</ul>
			</div>
			<div class="footer-section">
				<h3>Contact</h3>
				<ul>
					<li><a href="mailto:contact@parallaxstudio.fr">contact@parallaxstudio.fr</a></li>
					<li><a href="tel:+33612345678">+33 6 12 34 56 78</a></li>
				</ul>
			</div>
		</div>
		<div class="footer-bottom">
			<p>&copy; {new Date().getFullYear()} Parallax Studio. {t("footerRights")}</p>
			<div class="footer-links">
				<a href={translatePath("/privacy/")}>{t("footerPrivacy")}</a>
				<a href={translatePath("/terms/")}>{t("footerTerms")}</a>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer {
		background-color: #18181b;
		color: #fff;
		padding: 4rem 0 2rem;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.footer-content {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.footer-section h3 {
		font-size: 1.25rem;
		margin-bottom: 1rem;
		color: #fff;
	}

	.footer-section p {
		color: #a1a1aa;
		line-height: 1.6;
	}

	.footer-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-section ul li {
		margin-bottom: 0.5rem;
	}

	.footer-section ul li a {
		color: #a1a1aa;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.footer-section ul li a:hover {
		color: #fff;
	}

	.footer-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 2rem;
		border-top: 1px solid #27272a;
	}

	.footer-links {
		display: flex;
		gap: 1rem;
	}

	.footer-links a {
		color: #a1a1aa;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.footer-links a:hover {
		color: #fff;
	}

	@media (max-width: 768px) {
		.footer-bottom {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}
	}
</style>
